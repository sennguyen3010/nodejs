<div class='mt-4'>
  <div class='row'>

    {{#each courses}}
      <div class='col-sm-6 col-lg-4'>
        <div class='card mt-4'>
          <a href='/courses/{{this.slug}}'>
            <img class='card-img-top' src={{this.image}} alt='Title' />
          </a>
          <div class='card-body'>
            <a href='/courses/{{this.slug}}'>
              <h4 class='card-title'>{{this.name}}</h4>
            </a>
            <p class='card-text'>{{this.description}}</p>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>